<div class="data-container">
<div class="row">
  <h3 class="column"><i class="fa fa-industry fa-lg" style="font-size: 3rem"></i>  Site List - All Sites</h3>
  <div class="column col-center">
    <i class="data-add-btn fa fa-plus-circle fa-lg"></i>    
  </div>
</div>
<table class="data-table" id="site-list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent Site</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Fax</th>
    </tr>
  </thead>
  <tbody>
{{range .}}  
    <tr class="data-row" 
        key="{{.ID}}" 
        parent-site="{{.ParentSite}}">
      <td>{{.Name}}</td>
      <td>{{if .ParentSiteName}} {{.ParentSiteName}} {{end}}</td>
      <td>{{.Address}}</td>
      <td>{{.Phone}}</td>
      <td>{{.Fax}}</td>
    </tr>
{{end}}  
  </tbody>
</table>

</div>

{{$parentSite := .Site.ParentSite}}
{{$stockSite := .Site.StockSite}}

<div class="data-container">

  <form class="grid-form">
    <fieldset>
      <legend><i class="fa fa-industry fa-lg" style="font-size: 2rem"> Site Details</i></legend>
      <div data-row-span="1">
        <div data-field-span="1">
          <label>Name</label>
          <input type="text" value="{{.Site.Name}}">
        </div>
      </div>
      <div data-row-span="2">
        <div data-field-span="1">
          <label>Parent Site</label>
          <select>
            <option value="" title=""></option>
            {{range .Sites}}
              <option value="{{.ID}}" title="{{.Name}}" {{if eq .ID $parentSite}}selected{{end}}>{{.Name}}</option>
            {{end}}
          </select>
        </div>
        <div data-field-span="1">
          <label>Stock Site</label>
          <select>
            <option value="" title=""></option>
            {{range .Sites}}
              <option value="{{.ID}}" title="{{.Name}}" {{if eq .ID $stockSite}}selected{{end}}>{{.Name}}</option>
            {{end}}
          </select>
        </div>
      </div>
      <div data-row-span="1">
        <div data-field-span="1">
          <label>Address</label>
          <input type="text" value="{{.Site.Address}}">
        </div>
      </div>
      <div data-row-span="2">
        <div data-field-span="1">
          <label>Phone</label>
          <input type="text" value="{{.Site.Phone}}">
        </div>
        <div data-field-span="1">
          <label>Fax</label>
          <input type="text" value="{{.Site.Fax}}">
        </div>
      </div>
      <div data-row-span="1">
        <div data-field-span="1">
          <label>Notes</label>
          <textarea>{{.Site.Notes}}</textarea>
        </div>
      </div>
    </fieldset>
    <div class="row">
      <div class="column">
        <div class="button-bar">
          <button class="button-outline md-close">Cancel</button>
          <button class="button-primary md-save">Save</button>                        
        </div>
      </div>
    </div>
  </form>

</div>
<div id="action-grid"></div>
